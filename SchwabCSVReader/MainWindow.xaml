<Window x:Class="SchwabCSVReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchwabCSVReader"
        mc:Ignorable="d"
        Title="Combiner" Height="150" Width="400"
        Style="{StaticResource MaterialDesignWindow}"
        >
    <Grid Margin="10" VerticalAlignment="Center">
        <StackPanel>
            <TextBox Name="DirectoryTextBox" Margin="0,0,0,10" Height="50" IsReadOnly="True" VerticalAlignment="Center" Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>
            <Button Content="Select Directory And Combine" Height="30" Click="OnSelectDirectoryClick"  Style="{DynamicResource MaterialDesignOutlinedButton}"/>
        </StackPanel>
    </Grid>
</Window>
